algoritmo "Exercicio2"

// Função :
// Autor :
// Data : 06/03/2020
// Seção de Declarações 
var raio, area, volume : real
inicio
      escreva("Digite um valor para o raio: ")
      leia(raio)
      
      area <- 4*3.1416 * raio^2
      volume <- (4/3)*3.1416 * raio^3
      escreval("A área vale: ", area)
      escreval("O volume vale: ", volume)
fimalgoritmo
